<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - StoreSample</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header>
        <div class="site-header">
            <div class="container">
                <div class="row">

                    <h1 class="brand pull-left">StoreSample</h1>

                    <ul class="navigation pull-right">
                        <li class="selected">Home</li>
                        <li>About us</li>
                        <li>Contact us</li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <header class="search">
        <div class="container">
            <div class="row center-block">
                <div class="col-md-11">
                    <input type="text" class="form-control pull-right" id="searchQuery" />
                </div>
                <div class="col-md-1">
                    <button class="btn btn-search pull-left" type="submit"><i class="glyphicon glyphicon-search"></i> Find books</button>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - MS MTC UK Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
