<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - StoreSample</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header>
        <div class="site-header">
            <div class="container">
                <div class="row">

                    <a href="@Url.Action("Index", "Home")"><h1 class="brand pull-left">StoreSample</h1></a>

                    <ul class="navigation pull-right">
                        <li class="selected">Home</li>
                        <li><a href="https://github.com/MSMTCUK/azure-immersion-workshops-paas/" target="_blank">GitHub Project</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <header class="search">
        <div class="container">
            <div class="row">
                <div class="col-md-12 search-row">
                    <div class="row">
                        @using (var f = Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            <div class="col-md-11">
                                <i class="glyphicon glyphicon-search"></i>
                                <input type="text" class="form-control pull-right" id="query" name="query" value="@ViewBag.Query" placeholder="Enter search text..." autocomplete="off"/>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-search pull-right" type="submit">Find a book</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - MS MTC UK Team, running on <strong>@Environment.MachineName</strong></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
